<body>

  <div class="bg-contact100" style="background-image: url('/images/bg-01.jpg');">
    <div class="container-contact100">
      <!-- <div class="wrap-contact100"> -->
      <!-- <div class="contact100-pic js-tilt" data-tilt>
              
            </div> -->







      <div class="container">
        <% if(currentUser.username.endsWith("@adv")) { %>
        <% ads.forEach(function(ads) { %>
        <% if(currentUser.username == ads.author.username) { %>


        <div class="card card-nav-tabs text-center">
          <div class="card-header card-header-primary">

            Your Campaign: <%= ads.name%>
          </div>
          <div class="card-body">
            <h4 class="card-title">From: <%= ads.sDate.toDateString() %> To <%= ads.eDate.toDateString()%></h4>
            <!--<p class="card-text">With supporting text below as a natural lead-in to additional content.</p>-->
            <a href="/ads/<%= ads._id %>" class="btn btn-primary">Show Info</a>
          </div>

          <div class="card-footer text-muted">
            2 days ago
          </div>
        </div>
        <% } %>
        <% }) %>
        <% }else if(currentUser.username.endsWith("@pub")) { %>

        <button class="btn btn-primary" style="color:white"><a href="/register/publisher" style="color:white">Create Ad
            Unit</a></button>
        <button class="btn btn-primary" style="color:white"><a href="http://localhost:3000" style="color:white">Claim
            Rewards</a></button>

        <% } %>



      </div>
    </div>
